<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/geo-ov-imported">
    
    <Resource 
        name="jdbc/transmodel"
        auth="Container"
        type="javax.sql.DataSource"
        username="transmodel"
        password="transmodel"
        driverClassName="org.postgresql.Driver"
        url="jdbc:postgresql://localhost/transmodel_acc"
        maxActive="25"
        validationQuery="select 1"
        
        timeBetweenEvictionRunsMillis="30000"
        minEvictableIdleTimeMillis="5000"       
        
        removeAbandoned="true"
        removeAbandonedTimeout="60"
        logAbandoned="true"            
    />
    <Parameter name="mapserver-url" value="http://geo-ov-acc.b3p.nl/cgi-bin/mapserv?map=/srv/maps/transmodel_acc.map" override="false"/>
</Context>
