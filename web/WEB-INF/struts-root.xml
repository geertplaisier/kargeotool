<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC '-//Apache Software Foundation//DTD Struts Configuration 1.2//EN' ''>
<struts-config>

    <action-mappings>
        <action path="/login" forward="login" />
        <action path="/loginError" type="nl.b3p.kar.struts.LoginErrorAction">
            <forward name="destination" path="/login.do"/>
        </action>
        <action path="/logout" type="nl.b3p.kar.struts.LogoutAction">
            <forward name="destination" path="/login.do"/>
        </action>
    </action-mappings>

    <message-resources parameter="nl/b3p/kar/ApplicationResources"/>

    <plug-in className="org.apache.struts.tiles.TilesPlugin">
        <set-property property="definitions-config" value="/WEB-INF/tiles-common.xml,/WEB-INF/tiles-root.xml"/>
        <set-property property="definitions-parser-validate" value="true" />
        <set-property property="moduleAware" value="true"/>
    </plug-in>

    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames" value="/WEB-INF/validator-rules.xml"/>
    </plug-in>
</struts-config>
