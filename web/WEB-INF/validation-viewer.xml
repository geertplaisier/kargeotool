<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">
<form-validation>
    <formset>
        <form name="activationForm">
            <!-- velden zijn double ipv float, maar in validator-rules.xml staat
                 geen jsFunctionName voor double validator
            -->
            <field property="karDistanceTillStopLine" depends="float">
                <arg0 key="a.karDistanceTillStopLine"/>
            </field>
            <field property="karTimeTillStopLine" depends="float">
                <arg0 key="a.karTimeTillStopLine"/>
            </field>
            <field property="karUsageType" depends="required">
				<arg0 key="a.karUsageType"/>
                <!-- TODO mask van mogelijke waardes -->
            </field>
            <field property="triggerType" depends="required">
				<arg0 key="a.triggerType"/>
                <!-- TODO mask van mogelijke waardes -->
            </field>
        </form>
    </formset>
    <formset>
        <form name="activationGroupForm">
            <field property="karSignalGroup" depends="required,integer">
                <arg0 key="ag.karSignalGroup"/>
            </field>
            <field property="metersAfterStopLine" depends="integer">
                <arg0 key="ag.metersAfterStopLine"/>
            </field>
        </form>
    </formset>
    <formset>
        <form name="roadsideEquipmentForm">
            <field property="dataOwner" depends="required">
                <arg0 key="rseq.dataOwner"/>
            </field>
            <field property="unitNumber" depends="integer,required">
                <arg0 key="rseq.unitNumber"/>
            </field>
            <field property="type" depends="required">
                <arg0 key="rseq.type"/>
                <!-- TODO mask van mogelijke waardes ^(CROSS|CLOSE|PIU)$ -->
            </field>
            <field property="installationDate" depends="date">
				<arg0 key="rseq.installationDate"/>
				<var>
					<var-name>datePatternStrict</var-name>
					<var-value>dd-MM-yyyy</var-value>
				</var>
            </field>
        </form>
    </formset>
</form-validation>
