<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">
<struts-config>
    <form-beans>
        <form-bean name="activationForm" type="org.apache.struts.validator.DynaValidatorForm">
            <form-property name="location" type="java.lang.String"/>
            <form-property name="agId" type="java.lang.String"/>
            <form-property name="id" type="java.lang.String"/>
            <form-property name="karUsageType" type="java.lang.String"/>
            <form-property name="triggerType" type="java.lang.String"/>
            <form-property name="commandType" type="java.lang.String"/>
            <form-property name="karDistanceTillStopLine" type="java.lang.String"/>
            <form-property name="karTimeTillStopLine" type="java.lang.String"/>
        </form-bean>
        <form-bean name="activationGroupForm" type="org.apache.struts.validator.DynaValidatorForm">
            <form-property name="copyFrom" type="java.lang.String"/>
            <form-property name="location" type="java.lang.String"/>
            <form-property name="rseqId" type="java.lang.String"/>
            <form-property name="id" type="java.lang.String"/>
            <form-property name="karSignalGroup" type="java.lang.String"/>
            <form-property name="directionAtIntersection" type="java.lang.String[]"/>
            <form-property name="metersAfterStopLine" type="java.lang.String"/>
            <form-property name="followDirection" type="java.lang.String"/>
            <form-property name="description" type="java.lang.String"/>
        </form-bean>
        <form-bean name="roadsideEquipmentForm" type="org.apache.struts.validator.DynaValidatorForm">
            <form-property name="location" type="java.lang.String"/>
            <form-property name="id" type="java.lang.String"/>
            <form-property name="dataOwner" type="java.lang.String"/>
            <form-property name="unitNumber" type="java.lang.String"/>
            <form-property name="type" type="java.lang.String"/>
            <form-property name="radioAddress" type="java.lang.String"/>
            <form-property name="description" type="java.lang.String"/>
            <form-property name="supplier" type="java.lang.String"/>
            <form-property name="supplierTypeNumber" type="java.lang.String"/>
            <form-property name="installationDate" type="java.lang.String"/>
            <form-property name="selectiveDetectionLoop" type="java.lang.String"/>
        </form-bean>
    </form-beans>
    <global-forwards>
        <forward name="failure" path="site.failure"/>
    </global-forwards>
    <action-mappings>
        <action path="/editor" type="nl.b3p.kar.struts.EditorAction">
            <forward name="editor" path="site.editor"/>
        </action>
        <action path="/activation" name="activationForm" type="nl.b3p.kar.struts.ActivationAction" scope="request" validate="false">
            <forward name="success" path="site.activation"/>
            <forward name="failure" path="site.activation"/>
        </action>
        <action path="/activationGroup" name="activationGroupForm" type="nl.b3p.kar.struts.ActivationGroupAction" scope="request" validate="false">
            <forward name="success" path="site.activationGroup"/>
            <forward name="failure" path="site.activationGroup"/>
        </action>
        <action path="/roadsideEquipment" name="roadsideEquipmentForm" type="nl.b3p.kar.struts.RoadsideEquipmentAction" scope="request" validate="false">
            <forward name="success" path="site.roadsideEquipment"/>
            <forward name="failure" path="site.roadsideEquipment"/>
        </action>
    </action-mappings>

    <message-resources parameter="nl/b3p/kar/ApplicationResources"/>

    <plug-in className="org.apache.struts.tiles.TilesPlugin" >
        <set-property property="definitions-config" value="/WEB-INF/tiles-common.xml,/WEB-INF/tiles-viewer.xml" />
        <set-property property="moduleAware" value="true" />
    </plug-in>

    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames" value="/WEB-INF/validator-rules.xml,/WEB-INF/validation-viewer.xml"/>
    </plug-in>
</struts-config>
