<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">
<struts-config>
    <form-beans>
        <form-bean name="edituserForm" type="org.apache.struts.validator.DynaValidatorForm">
            <form-property name="username" type="java.lang.String"/>
            <form-property name="volledigenaam" type="java.lang.String"/>
            <form-property name="email" type="java.lang.String"/>
            <form-property name="telefoon" type="java.lang.String"/>
            <form-property name="positie" type="java.lang.String"/>
            <form-property name="wachtwoord" type="java.lang.String"/>
            <form-property name="gemeente" type="java.lang.String"/>
            <form-property name="regio" type="java.lang.String"/>
            <form-property name="provincie" type="java.lang.String"/>
        </form-bean>
        <form-bean name="activationForm" type="org.apache.struts.validator.DynaValidatorForm">
            <form-property name="id" type="java.lang.String"/>
            <form-property name="location" type="java.lang.String"/>            
            <form-property name="activationGroup" type="java.lang.String"/>
            <form-property name="index" type="java.lang.String"/>
            <form-property name="validFrom" type="java.lang.String"/>
            <form-property name="karUsageType" type="java.lang.String"/>
            <form-property name="type" type="java.lang.String"/>
            <form-property name="commandType" type="java.lang.String"/>
            <form-property name="karDistanceTillStopLine" type="java.lang.String"/>
            <form-property name="karTimeTillStopLine" type="java.lang.String"/>
            <form-property name="karRadioPower" type="java.lang.String"/>
            <form-property name="metersBeforeRoadsSideEquipmentLocation" type="java.lang.String"/>
            <form-property name="angleToNorth" type="java.lang.String"/>
            <form-property name="updater" type="java.lang.String"/>
            <form-property name="updateTime" type="java.lang.String"/>
            <form-property name="validator" type="java.lang.String"/>
            <form-property name="validationTime" type="java.lang.String"/>
        </form-bean>
    </form-beans>
    <global-forwards>
        <forward name="success" path="index.do"/>
        <forward name="failure" path="site.failure"/>
    </global-forwards>
    <action-mappings>
    	<action path="/viewer" type="nl.b3p.kar.struts.ViewerAction" scope="request" validate="false">
            <forward name="success" path="site.viewer"/>
        </action>
        <action path="/edituser" name="edituserForm" type="nl.b3p.kar.struts.EditUserAction" scope="request" validate="false">
            <forward name="success" path="site.edituser"/>
            <forward name="failure" path="site.edituser"/>
        </action>
        <action path="/activation" name="activationForm" type="nl.b3p.kar.struts.ActivationAction" scope="request" validate="false">
            <forward name="success" path="site.activation"/>
            <forward name="failure" path="site.activation"/>
        </action>

    </action-mappings>

    <message-resources parameter="nl/b3p/kar/ApplicationResources"/>

    <plug-in className="org.apache.struts.tiles.TilesPlugin" >
        <set-property property="definitions-config" value="/WEB-INF/tiles-common.xml,/WEB-INF/tiles-viewer.xml" />
        <set-property property="moduleAware" value="true" />
    </plug-in>

    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames" value="/WEB-INF/validator-rules.xml,/WEB-INF/validation-viewer.xml"/>
    </plug-in>
</struts-config>
